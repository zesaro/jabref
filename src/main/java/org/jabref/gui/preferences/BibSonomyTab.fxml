<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefWidth="650.0" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jabref.gui.preferences.BibSonomyTabView">
    <Label styleClass="titleHeader" text="BibSonomy" />
    <Label styleClass="sectionHeader" text="Credentials" />
   <HBox spacing="10.0">
         <GridPane hgap="10.0" vgap="4.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="333" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
           </rowConstraints>
               <Label text="API-URL" />
               <Label text="Benutzername" GridPane.rowIndex="1" />
               <Label text="API-Schlüssel" GridPane.rowIndex="2" />
               <TextField GridPane.columnIndex="1" />
               <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <CheckBox text="API-Schlüssel speichern" GridPane.columnIndex="1" GridPane.rowIndex="3">
                      <tooltip>
                          <Tooltip text="Speichert den API-Schlüssel für eine spätere Nutzung." />
                      </tooltip>
                  </CheckBox>
         </GridPane>
   </HBox>
    <Label styleClass="sectionHeader" text="%Settings" />
    <HBox spacing="12.0">
         <GridPane hgap="10.0" vgap="4.0">
           <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" />
               <ColumnConstraints hgrow="SOMETIMES" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
           </rowConstraints>
               <Label text="Tag cloud size" />
               <Label text="Tag cloud order" GridPane.rowIndex="1" />
               <Label text="Number of Posts to fetch per Request" GridPane.rowIndex="2" />
               <Label text="Set file directories" GridPane.rowIndex="8" />
             <Label text="Default visibility" GridPane.rowIndex="9" />
             <Label text="Extra fields" GridPane.rowIndex="10" />
               <Spinner GridPane.columnIndex="1" />
               <Spinner GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <SplitMenuButton mnemonicParsing="false" text="SplitMenuButton" GridPane.columnIndex="1" GridPane.rowIndex="9">
                 <items>
                   <MenuItem mnemonicParsing="false" text="Action 1" />
                   <MenuItem mnemonicParsing="false" text="Action 2" />
                 </items>
               </SplitMenuButton>
               <TextField GridPane.columnIndex="1" GridPane.rowIndex="10" />
               <CheckBox text="Do not warn me, if more posts are available" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <CheckBox text="Do not warn me, if a post hast no tags assigned" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <CheckBox text="Update tags on startup" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               <CheckBox text="Upload documents on export" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               <CheckBox text="Download documents on import" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               <Button text="Database properties" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <SplitMenuButton mnemonicParsing="false" text="SplitMenuButton" GridPane.columnIndex="1" GridPane.rowIndex="1">
           <items>
             <MenuItem mnemonicParsing="false" text="Action 1" />
             <MenuItem mnemonicParsing="false" text="Action 2" />
           </items>
         </SplitMenuButton>
         </GridPane>
        </HBox>
</fx:root>
